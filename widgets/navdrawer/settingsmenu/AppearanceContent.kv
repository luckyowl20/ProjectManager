        OneLineAvatarIconListItem:
            size_hint_y: None
            height: 5

        OneLineAvatarIconListItem:
            text: "Use dark mode"
            IconLeftWidget:
                icon: "theme-light-dark"
            StyleContainer:
                id: style_container
                MDSwitch:
                    id: style_switch
                    active: root.get_theme_style()
                    size: '40dp', '40dp'
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    active: root.get_theme_style()
                    on_active: root.set_style(style_switch, root.parent.parent.parent)
